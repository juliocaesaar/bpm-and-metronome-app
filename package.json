{
  "name": "bpm-metronome-app",
  "version": "1.0.0",
  "description": "BPM Calculator and Metronome with Ambient Pads",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build"
  },
  "keywords": [
    "bpm",
    "metronome",
    "music",
    "ambient",
    "pads"
  ],
  "author": "BPM Metronome App",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.bpmmetronome.app",
    "productName": "BPM Metronome App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git",
      "!*.md",
      "!build.bat",
      "!install.bat",
      "!test.bat",
      "!clean.bat"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "portable": {
      "artifactName": "BPM-Metronome-App-${version}-Portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "forceCodeSigning": false,
    "sign": false
  }
}
